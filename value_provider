import 'package:flutter/cupertino.dart';
import 'package:provider/provider.dart';
import 'package:shared_preferences/shared_preferences.dart';

//My attempt at a value notifier, but couldn't get it to work either


class ValueProvider extends ValueNotifier{
int downloadPercentage = 0;

ValueProvider(value) : super(value);


void getPercentage(int input) {
  downloadPercentage = input;
  notifyListeners();
  print(downloadPercentage);
}

}


